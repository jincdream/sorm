<checkbox-group
  class="sm_checkbox_group"
  onChange="onChange">
  <label class="sm_checkbox_wrap" a:for="{{dataSource}}" key="label-{{index}}">
    <checkbox
      value="{{index}}"
      checked="{{item.isDefault}}"
      disabled="{{props.disabled === undefined ? item.disabled : disabled}}"
      color="{{item.color}}" />
    <text class="checkbox-text">{{item.label}}</text>
  </label>
</checkbox-group>